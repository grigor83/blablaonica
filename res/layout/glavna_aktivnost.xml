<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glavna_aktivnost_pozadina"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/naslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="casual"
        android:text="blablaonica"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:background="@drawable/naslov_glavne_aktivnosti"
        />

    <EditText
        android:id="@+id/ukucajIme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="casual"
        android:textAlignment="textStart"
        android:textSize="30dp"
        android:hint="@string/trazi"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:background="@drawable/naslov_glavne_aktivnosti"
        android:inputType="textNoSuggestions"
        android:textCursorDrawable="@drawable/crta">
    </EditText>/>

    <ImageButton
        android:id="@+id/lupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/podesavanja"
        android:paddingRight="5dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/lupa"
        android:background="@android:color/transparent"
        android:onClick="pronadjiKontakt">
    </ImageButton>

    <ImageButton
        android:id="@+id/podesavanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/dugme_za_podesavanja"
        android:background="@android:color/transparent"
        android:onClick="prikaziPodesavanja"
        />

    <ListView
        android:id="@+id/spisakKontakata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/naslov"
        />

</RelativeLayout>