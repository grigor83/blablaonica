<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <TextView
        android:id="@+id/inicijaliPosiljaoca"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/naslov"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/slikaPosiljaoca"
        android:scaleType="centerCrop"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/inicijali"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/naslov"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/slikaKorisnika"
        android:scaleType="centerCrop"
        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        />

    <RelativeLayout
        android:id="@+id/kontejner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/ikonaFajla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
        </ImageView>

        <TextView
            android:id="@+id/imeFajla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ikonaFajla"
            android:gravity="center_horizontal"
            android:maxWidth="200dp"
            android:minWidth="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="ovo je moja poruka"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/vrijeme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="vrijeme je"
            android:textSize="10dp"
            android:textStyle="italic"
            android:layout_alignEnd="@id/imeFajla"
            android:layout_below="@id/imeFajla"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:paddingBottom="2dp"
            />

        <ProgressBar
            android:id="@+id/neodredjeniProgresBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/svijetloZelena"
            />

        <ImageView
            android:id="@+id/kvacica1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kvacica_velika"
            android:layout_toLeftOf="@id/vrijeme"
            android:layout_alignBottom="@id/vrijeme"
            android:paddingRight="7dp"
            android:paddingBottom="2dp"
            />

        <ImageView
            android:id="@+id/kvacica2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kvacica_velika"
            android:layout_toLeftOf="@id/vrijeme"
            android:layout_alignBottom="@id/vrijeme"
            android:paddingBottom="2dp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/rotirajuca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/strelica_za_rifres"
        android:layout_toLeftOf="@id/kontejner"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>


</RelativeLayout>
