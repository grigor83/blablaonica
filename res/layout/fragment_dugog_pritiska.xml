<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dugog_fragmenta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".FragmentDugogPritiska"
    android:orientation="vertical"
    android:background="@drawable/glavna_aktivnost_pozadina"
    android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/kopiraj_poruku"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/kopiraj_poruku"
        android:textAlignment="textStart"
        android:textSize="18dp"
       />

    <TextView
        android:id="@+id/proslijedi_poruku"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:text="@string/proslijedi_poruku"
        android:textAlignment="textStart"
        android:textSize="18dp"
        />

</LinearLayout>