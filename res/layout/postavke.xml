<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/pozadina_za_postavke"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/naslov"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ikona_aplikacije"
        android:layout_alignParentTop="true">
    </ImageView>

    <TextView
        android:id="@+id/naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/kontejnerPostavki"
        android:text="blablaonica"
        android:fontFamily="casual"
        android:textColor="@android:color/black"
        android:textSize="58dp"
        android:background="@drawable/naslov"
        android:padding="20dp">
    </TextView>

    <LinearLayout
        android:id="@+id/kontejnerPostavki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:text="@string/uloguj"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="uloguj"
        android:background="@drawable/dugme_za_logovanje"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/kontejnerPostavki"
        android:layout_marginTop="100dp"
        android:textSize="15dp">
    </Button>

</RelativeLayout>